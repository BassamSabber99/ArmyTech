@{
    ViewBag.Title = "Army Tech";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px;text-align:center">
    @Html.ActionLink("+ Add Employee", "Add", "Crude")
    <table id="employees" class="table table-bordered table-hover" style="direction:rtl;width:100%;text-align:center;">
        <thead>
            <tr>
                <th>ID</th>
                <th>الاسم</th>
                <th>المحافظه</th>
                <th>المنطقه</th>
                <th>العنوان</th>
                <th>المجال الوظيفي</th>
                <th>الوظيفه</th>
                <th>المؤهلات</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    

</div>

@section scripts{
    

    <script>
        $(document).ready(function () {
            var table = $("#employees").DataTable({
                ajax: {
                    url: "/api/employee",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "id",
                    },
                    {
                        data: "name",
                    },
                    {
                        data: "governorate",
                    },
                    {
                        data: "neighborhood",
                    },
                    {
                        data: "adress",
                    },
                    {
                        data: "careerfield",
                    },
                    {
                        data: "companyjob",
                    },
                    {
                        data: "qualification",
                        render: function (data) {
                            if (data == "")
                                return "لم يتم التحديد";
                            else
                                return data;
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return `<a href="/Crude/edit?id=${data}" class="btn btn-info mr-2">EDIT</a><button class="btn btn-danger js-delete" data-id=${data} >DELETE</button>`
                        }
                    }
                    
                ],
                "bSort": false,
            });
            $.ajax({
                url: "/api/employee",
                method: "GET",
                success: function (res) {
                    console.log(res);
                }
            });

            

            $("#employees").on("click", ".js-delete", function () {
                var button = $(this);
                console.log($(this).attr('data-id'));
                $.ajax({
                    url: "/api/employee?id=" + button.attr("data-id"),
                    method: "DELETE",
                    success: function () {
                        table.row(button.parents("tr")).remove().draw();
                    },
                    error: function (err) {
                        console.log(err);
                    }
                })
            });


        });
    </script>
    
    
}